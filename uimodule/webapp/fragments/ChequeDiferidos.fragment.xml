<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
  height="100%">
	<Table id="idChequeTable" inset="false">
		<columns>
			<Column
        width="35em"
				demandPopin="true">
				<Text text="{i18n>descripcion}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
        hAlign="End">
				<Text text="{i18n>montos}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{i18n>CPOPendGal}"/>
				</cells>
				<cells>
					<Text
						text="{path: 'ModelEstadoGral>/ModelEstadoGral/GSaldoRd', type:'sap.ui.model.type.Float', formatOptions : { groupingEnabled: true, groupingSeparator: '.', decimalSeparator : ',', minFractionDigits: 2}}" class="montos"/>
				</cells>
			</ColumnListItem>
			<ColumnListItem>
				<cells>
					<Text text="{i18n>CPOPendRio}"/>
				</cells>
				<cells>
					<Text
						text="{path: 'ModelEstadoGral>/ModelEstadoGral/GSaldoRdRio', type:'sap.ui.model.type.Float', formatOptions : { groupingEnabled: true, groupingSeparator: '.', decimalSeparator : ',', minFractionDigits: 2}}" class="montos"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
  <Button type="Default"
                      text="{i18n>detChePago}"
                      press="onPressDetCheques"
                      ariaDescribedBy="acceptButtonDescription genericButtonDescription"/>
</core:FragmentDefinition>
