<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  height="100%">
<Table id="idSaldoCerLinTable" inset="false">
		<columns>
			<Column id="_IDGenColumn1"
				minScreenWidth=""
				demandPopin="true">
				<Text id="_IDGenText1" text="{i18n>descripcion}"/>
			</Column>
			<Column id="_IDGenColumn2"
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End">
				<Text id="_IDGenText2" text="{i18n>montos}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem id="_IDGenColumnListItem1">
				<cells>
					<Text id="_IDGenText3" text="{i18n>ceralPenFij}"/>
				</cells>
				<cells>
					<Text id="_IDGenText4"
						text="{path: 'ModelEstadoGral>/ModelEstadoGral/OpePFijar', type:'sap.ui.model.type.Float', formatOptions : { groupingEnabled: true, groupingSeparator: '.', decimalSeparator : ',', minFractionDigits: 2}}" class="montos"/>
				</cells>
			</ColumnListItem>
			<ColumnListItem id="_IDGenColumnListItem2">
		  	<cells>
					<Text id="_IDGenText5" text="{i18n>ceralPenLiq}"/>
				</cells>
				<cells>
					<Text id="_IDGenText6"
						text="{path: 'ModelEstadoGral>/ModelEstadoGral/OpePFactu', type:'sap.ui.model.type.Float', formatOptions : { groupingEnabled: true, groupingSeparator: '.', decimalSeparator : ',', minFractionDigits: 2}}" class="montos"/>
				</cells>
			</ColumnListItem>
			<ColumnListItem id="_IDGenColumnListItem3">
				<cells>
					<Text id="_IDGenText7" text="{i18n>ceralLiqPend}"/>
				</cells>
				<cells>
					<Text id="_IDGenText8"
						text="{path: 'ModelEstadoGral>/ModelEstadoGral/OpePEntrega', type:'sap.ui.model.type.Float', formatOptions : { groupingEnabled: true, groupingSeparator: '.', decimalSeparator : ',', minFractionDigits: 2}}" class="montos"/>
				</cells>
			</ColumnListItem>
		</items>
  </Table>
  	<Button id="_IDGenButton1" type="Default"
                      text="{i18n>detCereal}"
                      press="onPressDetCanje"
                      ariaDescribedBy="acceptButtonDescription genericButtonDescription"/>
</core:FragmentDefinition>
