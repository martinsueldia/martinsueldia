<mvc:View controllerName="profertil.appCtaCorriente.controller.DetalleCheques"
    id="view1"
	  height="100%"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:semantic="sap.m.semantic"
		xmlns:ui="sap.ca.ui"
		displayBlock="true">
   <Shell id="shell">
		<App id="App">
		<semantic:FullscreenPage  title="{i18n>detChePago}"
                               showNavButton="true" navButtonPress="onNavBack">
				<semantic:content>
					<ScrollContainer id="containerForm" width="100%" horizontal="false" vertical="false">
			      <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="det_chequeSet" basicSearchFieldName="Item,Blart" enableBasicSearch="true" >
							<smartFilterBar:controlConfiguration>
                <smartFilterBar:ControlConfiguration id="multiCombo"  visibleInAdvancedArea="true">
                </smartFilterBar:ControlConfiguration>
                <smartFilterBar:ControlConfiguration id="Report" key="Report" conditionType="sap.ui.comp.config.condition.DateRangeType" visibleInAdvancedArea="true"></smartFilterBar:ControlConfiguration>
                <smartFilterBar:ControlConfiguration id="FechMov" key="FechMov" conditionType="sap.ui.comp.config.condition.DateRangeType" visibleInAdvancedArea="true"></smartFilterBar:ControlConfiguration>
                <!--<smartFilterBar:ControlConfiguration id="FechaSaldo" key="FechaSaldo" conditionType="sap.ui.comp.config.condition.DateRangeType" visibleInAdvancedArea="true"></smartFilterBar:ControlConfiguration>-->
                 <smartFilterBar:ControlConfiguration id="_IDGenControlConfiguration3"  key="FechaSaldo" label="Saldo Cuenta Corriente" visibleInAdvancedArea="true">
                 <smartFilterBar:customControl>
                  <!--<Label id="_IDGenLabel1" text="simple DatePicker" labelFor="DP1"/>-->
                      <DatePicker
                        id="DP1"
                        placeholder="Ingresar Fecha"
                        change="onChangeFechaSaldoCheques"
                        class="sapUiSmallMarginBottom"/>
                </smartFilterBar:customControl>
                  </smartFilterBar:ControlConfiguration></smartFilterBar:controlConfiguration>
							<!-- layout data used to make the table growing but the filter bar fixed -->
							<smartFilterBar:layoutData>
								<FlexItemData shrinkFactor="0"/>
							</smartFilterBar:layoutData>
						</smartFilterBar:SmartFilterBar>
            <smartTable:SmartTable id="chequeTabla" width="100%"
                        entitySet="det_chequeSet" smartFilterId="smartFilterBar"
                        tableType="ResponsiveTable" useExportToExcel="true"
                        editable="false" beforeExport="onBeforeExport"  beforeRebindTable="onBeforeRebindTable" header="{i18n>totalRegis}"
                        useVariantManagement="false" useTablePersonalisation="true"
                        showRowCount="true"
                        enableAutoBinding="true"
                        persistencyKey="SmartTableAnalytical_Explored"
                        demandPopin="true"
                        ignoredFields="Kunnr,Gjahr,Belnr,Buzei"
                        requestAtLeastFields="Item,Blart,BlartTxt,Zuonr,Bldat,Zfbdt,Dmbtr,SaldoAcumMl,TipoCambio,Dmbe3,SaldoAcumMe"
                        initiallyVisibleFields="Item,Blart,BlartTxt,Zuonr,Bldat,Zfbdt,Dmbtr,SaldoAcumMl,TipoCambio,Dmbe3,SaldoAcumMe">
					  	<smartTable:layoutData>
								<FlexItemData
									xmlns="sap.m" id="FlexItemData" growFactor="1" baseSize="0%"/>
								</smartTable:layoutData>
                <Table growingThreshold="99999999" growing="true"/>
							</smartTable:SmartTable>
						</ScrollContainer>
					</semantic:content>
				</semantic:FullscreenPage>
			</App>
		</Shell>
	</mvc:View>
