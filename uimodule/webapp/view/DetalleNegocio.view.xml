<mvc:View
	  controllerName="profertil.appCtaCorriente.controller.DetalleNegocio"
    id="view1"
	  height="100%"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:semantic="sap.m.semantic"
	xmlns:ui="sap.ca.ui"
		displayBlock="true">
	<Shell id="shell">
		<App id="App">
			<semantic:FullscreenPage title="{i18n>detNegocio}"
                               showNavButton="true" navButtonPress="onNavBack">
				<semantic:content>
						<smartTable:SmartTable id="negocioTabla" width="100%"
                        entitySet="det_negocioSet" smartFilterId="smartFilterBar"
                        tableType="ResponsiveTable" useExportToExcel="true"
                        editable="false" beforeExport="onBeforeExport"  beforeRebindTable="onBeforeRebindTable" header="{i18n>totalRegis}"
                        useVariantManagement="false" useTablePersonalisation="true"
                        showRowCount="true"
                        enableAutoBinding="true"
                        persistencyKey="SmartTableAnalytical_Explored"
                        demandPopin="true"
                        ignoredFields="Kunnr"
                        requestAtLeastFields="Vbeln,Bstdk,Arktx,Netpr,BstdkE,Zmeng,CupoSinFact,Saldo,Valor,Vencido"
                        initiallyVisibleFields="Vbeln,Bstdk,Arktx,Netpr,BstdkE,Zmeng,CupoSinFact,Saldo,Valor,Vencido">
                        <ScrollContainer id="containerForm2" width="100%" horizontal="false" vertical="true">
                        <Table growingThreshold="99999999" growing="true">
                          <columns>
                            <Column width="50px" hAlign="Begin">
                            <customData>
                            <core:CustomData key="p13nData"
                            value='\{"columnKey": "Kunnr", "leadingProperty": "Kunnr"}'/>
                            </customData>
                            <Text  text="Doc"/>
                            </Column>
                            <Column   width="120px" hAlign="Begin">
                           <customData>
                              <core:CustomData key="p13nData" value='\{"columnKey": "Vbeln", "leadingProperty": "Vbeln", "sortProperty": "Vbeln", "filterProperty":  "Vbeln" }'/>
                        </customData>
                            <Text text="Negocio"/>
                            </Column>
                            <Column   width="120px" hAlign="Begin">
                           <customData>
                              <core:CustomData key="p13nData" value='\{"columnKey": "Bstdk", "leadingProperty": "Bstdk", "sortProperty": "Bstdk", "filterProperty":  "Bstdk", "columnIndex": 3 }'/>
                        </customData>
                            <Text text="{/#det_negocio/Bstdk/@sap:label}"/>
                            </Column>
                        </columns>
                            <items>
                              <ColumnListItem  highlight="{path:'Vencido', formatter:'.formatRowHighlight'}">
                               <cells>
                                  <!--<Button id="_IDGenButton1" press="onPdfDocumentoNegocio" icon="sap-icon://pdf-attachment" visible="true" type="Emphasized"/>-->
                                   <ObjectStatus  icon="sap-icon://pdf-attachment"  active="true" press="onPdfDocumentoNegocio"/>
                                  <!--<Link id="_IDGenLink1" text="{Vbeln}" press="onPressNegocio"/>-->
                                   <ObjectStatus icon="sap-icon://detail-view" text="{Vbeln}" active="true" press="onPressNegocio"/>
                                   <ObjectAttribute text="{path:'Bstdk', type: 'sap.ui.model.type.Date', formatOptions: {UTC: true}}"/>
                                </cells>
                              </ColumnListItem>
                           </items>
                        </Table>
                        </ScrollContainer>
							<smartTable:layoutData>
								<FlexItemData
									xmlns="sap.m" id="FlexItemData" growFactor="1" baseSize="0%"/>
								</smartTable:layoutData>
							</smartTable:SmartTable>
					</semantic:content>
				</semantic:FullscreenPage>
			</App>
		</Shell>
	</mvc:View>
